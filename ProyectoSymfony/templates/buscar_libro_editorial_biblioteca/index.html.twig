{% extends 'base.html.twig' %}

{% block title %}Buscar Libro por Editorial y Biblioteca{% endblock %}

{% block body %}
<h1>Buscar Libro por Editorial y Biblioteca</h1>

<form method="get" action="{{ path('buscar_libro_editorial_biblioteca') }}">
    <label for="editorial">Editorial:</label>
    <input type="text" id="editorial" name="editorial" required>

    <label for="nombreBiblioteca">Biblioteca:</label>
    <input type="text" id="nombreBiblioteca" name="nombreBiblioteca" required>

    <button type="submit">Buscar</button>
</form>

{% if libros is defined %}
    <h2>Resultados:</h2>
    <ul>
        {% for libro in libros %}
            <li>{{ libro.titulo }} por {{ libro.editorial }} en {{ libro.biblioteca.nombre }}</li>
        {% else %}
            <li>No hay libros disponibles.</li>
        {% endfor %}
    </ul>
{% endif %}
{% endblock %}